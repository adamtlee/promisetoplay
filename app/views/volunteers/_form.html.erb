<%= simple_form_for @volunteer do |f| %>
  <%= f.error_notification %>
  <br></br>
  <br></br>
  <br></br>
  <br></br>
    <style>
    h1 {
      text-align:center;
    }
  </style>
  
  <div class = "container">
    <h1>Volunteer</h1>
      <%= f.input :name%>
      <%= f.input :email%>
      <%= f.input :phone%>
      <%= f.input :preference, collection: [['Nutrition', 'nutrition'],['Activities', 'activities'],['Prizes', 'prizes']], :include_blank => "", :label => "Preference(optional)" %>
      <%= f.input :tshirt_size, collection: [['Large','large'],['Medium','medium'],['Small','small']], :include_blank => "", :label => "t-shirt size" %>
      <%= f.input :question,:label => "How did you hear about us?" %>
      <%= f.input :description, :label => "Additional Information"%>
    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-default"%>
    </div>
    </div>
  </div>
<% end %>