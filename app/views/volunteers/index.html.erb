<p id="notice"><%= notice %></p>
<br>
<br>
<div class = "container">
  <h1>Listing Volunteers</h1>
  
  <table class = "table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>preference</th>
        <th>t-shirt size</th>
        <th>question</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @volunteers.each do |volunteer| %>
        <tr>
          <td><%= volunteer.name %></td>
          <td><%= volunteer.email %></td>
          <td><%= volunteer.phone %></td>
          <td><%= volunteer.preference %></td>
          <td><%= volunteer.tshirt_size %></td>
          <td><%= volunteer.question %></td>
          <td><%= volunteer.description %></td>
          <td><%= link_to 'Show', volunteer %></td>
          <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
          <td><%= link_to 'Destroy', volunteer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Volunteer', new_volunteer_path %>
</div>